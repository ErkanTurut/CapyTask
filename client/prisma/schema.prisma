// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

// User model representing individuals in the system
model user {
  id              String            @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  image_uri       String? // URL for user's image
  email           String            @unique // User's email (unique)
  first_name      String? // User's first name
  last_name       String? // User's last name
  createdAt       DateTime          @default(now()) @db.Timestamptz(6) // Timestamp of user creation
  updatedAt       DateTime          @default(now()) @updatedAt @db.Timestamptz(6) // Timestamp of last update
  external_id     String?           @unique @db.Uuid // External identifier for user
  tasks           task[] // Tasks associated with the user
  user_team       user_team[] // User's team memberships
  user_workspace  user_workspace[] // User's workspace memberships
  workspaces      workspace[] // Workspaces associated with the user
  inspection_task inspection_task[] // Inspection tasks assigned to the user
}

// Team model representing organizational groups
model team {
  id           String      @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name         String // Team name
  description  String? // Team description
  image_uri    String? // URL for team's image
  identity     String // Team identity
  created_at   DateTime    @default(now()) @db.Timestamptz(6) // Timestamp of team creation
  updated_at   DateTime    @default(now()) @updatedAt @db.Timestamptz(6) // Timestamp of last update
  workspace_id String      @db.Uuid // Reference to the associated workspace
  plans        plan[] // Plans associated with the team
  workspace    workspace   @relation(fields: [workspace_id], references: [id], onDelete: Cascade) // Relationship with workspace
  users        user_team[] // Users belonging to the team

  @@unique([identity, workspace_id])
  @@unique([name, workspace_id])
  @@index([workspace_id])
}

// Role model representing user roles in the system
model role {
  id             String           @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name           Role // Role name
  description    String // Role description
  permissions    Permission[]     @default([]) // Permissions associated with the role
  user_team      user_team[] // User-team relationships with this role
  user_workspace user_workspace[] // User-workspace relationships with this role
}

// Plan model representing templates for asset inspections
model plan {
  id            String            @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name          String // Plan name
  description   String? // Plan description
  created_at    DateTime          @default(now()) @db.Timestamptz(6) // Timestamp of plan creation
  updated_at    DateTime          @default(now()) @updatedAt @db.Timestamptz(6) // Timestamp of last update
  team_id       String            @db.Uuid // Reference to the associated team
  team          team              @relation(fields: [team_id], references: [id], onDelete: Cascade) // Relationship with team
  tasks         task[] // Tasks associated with the plan
  task_snapshot inspection_task[] // Snapshot of inspection tasks associated with the plan

  @@index([team_id])
}

// Task model representing individual tasks within plans
model task {
  id             String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name           String // Task name
  description    String? // Task description
  created_at     DateTime @default(now()) @db.Timestamptz(6) // Timestamp of task creation
  updated_at     DateTime @default(now()) @updatedAt @db.Timestamptz(6) // Timestamp of last update
  parent_task_id String?  @db.Uuid // Reference to the parent task
  created_by_id  String?  @db.Uuid // Reference to the user who created the task
  plan_id        String   @db.Uuid // Reference to the associated plan

  plan        plan   @relation(fields: [plan_id], references: [id], onDelete: Cascade) // Relationship with plan
  created_by  user?  @relation(fields: [created_by_id], references: [id]) // Relationship with user who created the task
  parent_task task?  @relation("task_sub_tasks", fields: [parent_task_id], references: [id], onDelete: Cascade) // Relationship with parent task
  sub_tasks   task[] @relation("task_sub_tasks") // Subtasks associated with this task

  @@index([parent_task_id])
  @@index([created_by_id])
}

// User-team model representing user memberships in teams with roles
model user_team {
  user_id String  @db.Uuid // Reference to the user
  team_id String  @db.Uuid // Reference to the team
  role_id String? @db.Uuid // Reference to the role
  role    role?   @relation(fields: [role_id], references: [id]) // Relationship with role
  team    team    @relation(fields: [team_id], references: [id]) // Relationship with team
  user    user    @relation(fields: [user_id], references: [id]) // Relationship with user

  @@id([user_id, team_id])
  @@index([team_id])
  @@index([role_id])
  @@index([user_id])
}

// User-workspace model representing user memberships in workspaces with roles
model user_workspace {
  user_id      String    @db.Uuid // Reference to the user
  workspace_id String    @db.Uuid // Reference to the workspace
  role_id      String?   @db.Uuid // Reference to the role
  role         role?     @relation(fields: [role_id], references: [id]) // Relationship with role
  user         user      @relation(fields: [user_id], references: [id]) // Relationship with user
  workspace    workspace @relation(fields: [workspace_id], references: [id]) // Relationship with workspace

  @@id([user_id, workspace_id])
  @@index([user_id])
  @@index([workspace_id])
  @@index([role_id])
}

// Workspace model representing organizational spaces
model workspace {
  id             String           @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name           String // Workspace name
  description    String? // Workspace description
  created_at     DateTime         @default(now()) @db.Timestamptz(6) // Timestamp of workspace creation
  updated_at     DateTime         @default(now()) @updatedAt @db.Timestamptz(6) // Timestamp of last update
  url_key        String           @unique // URL key for the workspace
  created_by     String           @db.Uuid // Reference to the user who created the workspace
  image_uri      String? // URL for workspace's image
  team           team[] // Teams associated with the workspace
  user_workspace user_workspace[] // User-workspace relationships associated with the workspace
  user           user             @relation(fields: [created_by], references: [id]) // Relationship with user who created the workspace

  @@index([url_key])
}

// Inspection model representing instances of inspections
model inspection {
  id               String            @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  created_at       DateTime          @default(now()) @db.Timestamptz(6) // Timestamp of inspection creation
  updated_at       DateTime          @default(now()) @updatedAt @db.Timestamptz(6) // Timestamp of last update
  completed_at     DateTime? // Timestamp of inspection completion
  created_by_id    String?           @db.Uuid // Reference to the user who created the inspection
  plan_snapshot_id String            @db.Uuid // Reference to the associated plan snapshot
  tasks            inspection_task[] // Inspection tasks associated with the inspection
  userId           String?           @db.Uuid // Reference to the user assigned to the inspection
}

// Inspection task model representing individual tasks within inspections
model inspection_task {
  id             String            @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name           String // Inspection task name
  description    String? // Inspection task description
  created_at     DateTime          @default(now()) @db.Timestamptz(6) // Timestamp of task creation
  updated_at     DateTime          @default(now()) @updatedAt @db.Timestamptz(6) // Timestamp of last update
  parent_task_id String?           @db.Uuid // Reference to the parent task
  created_by_id  String?           @db.Uuid // Reference to the user who created the task
  plan_id        String            @db.Uuid // Reference to the associated plan
  status         Status // Status of the inspection task
  priority       Priority // Priority of the inspection task
  plan           plan              @relation(fields: [plan_id], references: [id], onDelete: Cascade) // Relationship with plan
  created_by     user?             @relation(fields: [created_by_id], references: [id]) // Relationship with user who created the task
  parent_task    inspection_task?  @relation("task_sub_tasks", fields: [parent_task_id], references: [id], onDelete: Cascade) // Relationship with parent task
  sub_tasks      inspection_task[] @relation("task_sub_tasks") // Subtasks associated with this task
  inspection     inspection?       @relation(fields: [inspectionId], references: [id]) // Relationship with inspection
  inspectionId   String?           @db.Uuid // Reference to the associated inspection

  @@index([parent_task_id])
  @@index([created_by_id])
}

// Enum for task status
enum Status {
  OPEN
  IN_PROGRESS
  COMPLETED
  ON_HOLD
  CANCELED
}

// Enum for user roles
enum Role {
  ADMIN
  MANAGER
  SUPERVISOR
  TECHNICIAN
  ENGINEER
  QUALITY_INSPECTOR
  OPERATOR
  OTHER
}

// Enum for permissions
enum Permission {
  FULL_ACCESS
  CAN_EDIT
  CAN_COMMENT
  CAN_VIEW
  NO_ACCESS
}

// Enum for task priority
enum Priority {
  LOW
  MEDIUM
  HIGH
}

model User {
  id            String    @id @default(cuid())
  name          String?
  // if you are using Github OAuth, you can get rid of the username attribute (that is for Twitter OAuth)
  username      String?
  gh_username   String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  sites         Site[]
  posts         Post[]
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  refresh_token_expires_in Int?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  oauth_token_secret       String?
  oauth_token              String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Post {
  id            String   @id @default(cuid())
  title         String?  @db.Text
  description   String?  @db.Text
  content       String?  @db.Text
  slug          String   @default(cuid())
  image         String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png") @db.Text
  imageBlurhash String?  @default("data:image/png;base64,") @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  published     Boolean  @default(false)
  site          Site?    @relation(fields: [siteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  siteId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId        String?

  @@unique([slug, siteId])
  @@index([siteId])
  @@index([userId])
}

model Site {
  id            String   @id @default(cuid())
  name          String?
  description   String?  @db.Text
  logo          String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/JRajRyC-PhBHEinQkupt02jqfKacBVHLWJq7Iy.png") @db.Text
  font          String   @default("font-cal")
  image         String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png") @db.Text
  imageBlurhash String?  @default("data:image/png;base64,") @db.Text
  subdomain     String?  @unique
  customDomain  String?  @unique
  message404    String?  @default("Blimey! You've found a page that doesn't exist.") @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId        String?
  posts         Post[]

  @@index([userId])
}

model Example {
  id            Int     @id @default(autoincrement())
  name          String?
  description   String? @db.Text
  domainCount   Int?
  url           String?
  image         String? @db.Text
  imageBlurhash String? @db.Text
}
